<%- include('partials/header')%>

<div class="container">


      <main class="d-flex justify-content-center m-4 singlePage align-items-center">
        <div class="col-md-8 signInBox">
            <h1 class="formField">Edit  <%= user.username %></h1>
            <p class="midgrey _1rem">Please use alphanumerica with no spaces or the following characters $.%,|</p>
              <form class="" action="/register/<%= user._id %>?_method=PUT" method="POST">

                <label for="username"> <span class="regAdmin">Username</span>
                    <input  type="text" name="User[username]" placeholder="Username"  class="form-control-lg m-2" autofocus  value="<%= user.username  %>" >
                </label>
               <label for="password">  <span class="regAdmin">Password</span>
                    <input  type="password" name="User[password]" placeholder="Password" class="form-control-lg m-2"  value="<%= user.password  %>" >
               </label>
               <label for="firstName">  <span class="regAdmin">First Name</span>
                    <input  type="text" name="User[firstName]" placeholder="First Name" class="form-control-lg m-2" value="<%= user.firstName  %>" > 
                </label>
                <label for="lastName">  <span class="regAdmin">Last Name</span>
                    <input  type="text" name="User[lastName]" placeholder="Last Name" class="form-control-lg m-2" value="<%= user.lastName %>">
                </label>
                <label for="email">  <span class="regAdmin">e-mail</span>
                    <input  type="email" name="User[email]" placeholder="john@doe.com" class="form-control-lg m-2" value="<%= user.email %>" > 
                </label>
                <label for="avatar">  <span class="regAdmin">Avatar</span>
                    <input  type="text" name="User[avatar]" placeholder="URL to your pic" class="form-control-lg m-2" value="<%= user.avatar %>"> 
                </label>
                <label for="judge" class=""> <span class="regAdmin">Judge?</span>
                  <input  type="checkbox" name="judge" placeholder="URL to your pic" class="form-control-lg m-2" value="<%= user.judge %>" >
              </label>
                <label for="adminCode">  <span class="regAdmin">Super User</span>
                    <input  type="checkbox" name="User[adminCode]" placeholder="Super User" class="form-control-lg m-2" value="<%= user.adminCode %>" >
                </label>

                <span>
                  <button class="btn btn-primary lg btn-block m-3" type="post" name="button">Edit Entry</button>
                
                  <form action="/profile/<%= user._id %>?_method=DELETE" method="POST" >
                      <button class="btn-sm btn-danger btn-block m-3"> Delete</button>
                  </form>
                </span>
        
            </form>
            <p class="midgrey">Already registered? <a href="/register" %> >Login</p></a> </p> 
        </div>
    </main>
            
    
  </div>
      <a href="/artentries" class="d-flex justify-content-center">Go Back</a>
</div>

<%- include('partials/footer') %>
